<Page x:Class="Roulette.Erfolgsfenster"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Roulette"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Erfolgsfenster">
    
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Background="CadetBlue" VerticalAlignment="Top" MinHeight="200" Click="btn_schließen_Click">
            <TextBlock Text="Schließen durch klicken"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               Foreground="Black" FontSize="70" TextDecorations="Underline"/>
        </Button>

        <Label x:Name="lbl_grußformAbschluss" Content="Vielen Dank fürs Spielen: "
Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top"
FontSize="50"/>

        <Label x:Name="lbl_ende" Content="abc"
       Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
       FontSize="50"/>
        <Label x:Name="lbl_maxEinsatz" Content="def"
       Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,150,0,0"
       FontSize="50"/>
    </Grid>
</Page>
