<Window x:Class="Black_Jack.Regelwerke"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Black_Jack"
        mc:Ignorable="d"
        Title="Regelwerke" Height="Auto" Width="1500">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>

        <Button Content="Zurück"
        VerticalAlignment="Top" HorizontalAlignment="Left" Padding="10" Background="DarkViolet" Click="btn_close_info" Height="auto"/>
        <Label Content="Roulette"
       VerticalAlignment="Top" HorizontalAlignment="Center"
       FontSize="50" FontWeight="UltraBold" Foreground="MediumAquamarine"/>
        <TextBlock
       TextWrapping="Wrap" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="15"
           FontSize="25" FontFamily="Dubai"><Run Text="Roulette ist ein Glücksspiel, bei dem Spieler auf das Ergebnis einer Drehung eines nummerierten Rades wetten. Eine Kugel wird in das sich drehende Rad geworfen und landet in einem Fach. Spieler platzieren vor dem Drehen Jetons auf dem Spieltisch, das verschiedene Wettbereiche für Zahlen und Zahlenkombinationen bietet. Der Croupier dreht das Rad, wirft die Kugel und kündigt an, wenn keine weiteren Einsätze möglich sind. Nach dem Anhalten der Kugel ruft der Croupier die Gewinnzahl aus, räumt verlorene Einsätze ab und zahlt Gewinner gemäß der festgelegten Quoten für Innenwetten (spezifische Zahlen/kleine Gruppen mit höheren Auszahlungen) und Außenwetten (größere Gruppen/Eigenschaften mit niedrigeren Auszahlungen) aus. Ziel ist die korrekte Vorhersage des Ergebnisses."/></TextBlock>

        <Label Content="GOOOOOOD LUUUUUUUUUCKKKK!!!!!"
               Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5"
               FontSize="40" FontWeight="Bold" Foreground="LawnGreen"/>
        <Label Content="Wishes Lester, GTAV!"
               Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

        <RadioButton GroupName="options" Content="Eine Nummer:	1:35" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" FontSize="25"/>
        <RadioButton GroupName="options" Content="Zwei Nummern:	1:17" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" FontSize="25"/>
        <RadioButton GroupName="options" Content="Drei Nummern 1:11" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" FontSize="25"/>
        <RadioButton GroupName="options" Content="Vier Nummern 1:8:	Einsatz zurück" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" FontSize="25"/>
        <RadioButton GroupName="options" Content="Sechs Nummern 1:5" Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" FontSize="25"/>
        <RadioButton GroupName="options" Content="Zwölf Nummern: 1:2" Grid.Row="8" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" FontSize="25"/>
        <RadioButton GroupName="options" Content="Einfache Chance: 1:1" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10" FontSize="25"/>

    </Grid>
</Window>
